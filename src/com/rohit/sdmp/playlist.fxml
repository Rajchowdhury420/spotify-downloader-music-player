<GridPane fx:id="playlistrootPane" alignment="top_left" hgap="10" prefHeight="175.0" prefWidth="800.0" style="-fx-background-color: #262626;" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rohit.sdmp.playlistController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
        <Label prefHeight="49.0" prefWidth="800.0" text="Spotify Downloader Music Player" textFill="#ff5733">
            <font>
                <Font name="Comic Sans MS" size="24.0" />
            </font>
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin></Label>
        <GridPane prefHeight="126.0" prefWidth="800.0" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="232.0" minWidth="10.0" prefWidth="232.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="464.0" minWidth="10.0" prefWidth="240.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="367.0" minWidth="0.0" prefWidth="328.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#homePressed" prefHeight="30.0" prefWidth="232.0" style="-fx-background-color: black;" text="Home" textFill="#f5f5f5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#playlistPressed" prefHeight="30.0" prefWidth="232.0" style="-fx-background-color: black;" text="Playlist" textFill="WHITE" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#settingsPressed" prefHeight="30.0" prefWidth="232.0" style="-fx-background-color: black;" text="Settings" textFill="WHITE" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#aboutPressed" prefHeight="39.0" prefWidth="232.0" style="-fx-background-color: black;" text="About" textFill="WHITE" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            <Label prefHeight="42.0" prefWidth="277.0" text="Choose music : " textFill="WHITE" GridPane.columnIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
               <opaqueInsets>
                  <Insets left="10.0" />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#choosePressed" prefHeight="25.0" prefWidth="123.0" style="-fx-background-color: GREEN;" text="Choose" GridPane.columnIndex="2">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            </children>
        </GridPane>
    </children>
